{
  "batch_processing_config": {
    "max_concurrent_jobs": 4,
    "max_concurrent_hypotheses": 2,
    "job_timeout_minutes": 120,
    "retry_delay_minutes": 5,
    "memory_limit_gb": 8.0,
    "cpu_limit_percent": 80.0,
    "disk_space_limit_gb": 10.0,
    "base_output_directory": "batch_results",
    "compress_results": true,
    "cleanup_intermediate_files": true,
    "enable_progress_monitoring": true,
    "log_level": "INFO",
    "save_job_logs": true,
    "enable_scheduling": false,
    "schedule_check_interval_minutes": 1,
    "enable_notifications": false,
    "notification_email": null,
    "notification_webhook": null
  },
  "base_config": {
    "confidence_level": 0.95,
    "bootstrap_iterations": 1000,
    "enable_robustness_tests": true,
    "generate_publication_outputs": true,
    "save_intermediate_results": true,
    "h1_threshold_trim": 0.15,
    "h1_min_regime_size": 10,
    "h2_max_horizon": 20,
    "h2_lags": 4,
    "h3_causality_lags": 4
  },
  "periods": [
    ["2008-01-01", "2015-12-31"],
    ["2016-01-01", "2023-12-31"],
    ["2008-01-01", "2023-12-31"]
  ],
  "specifications": ["default", "alternative_1", "robustness_check"],
  "specifications_config": {
    "default": {
      "h1_confidence_proxy": "consumer_confidence",
      "h2_investment_measure": "private_fixed_investment",
      "h3_exchange_rate_measure": "trade_weighted_dollar"
    },
    "alternative_1": {
      "h1_confidence_proxy": "financial_stress_index",
      "h2_investment_measure": "equipment_investment",
      "h3_exchange_rate_measure": "broad_dollar_index"
    },
    "robustness_check": {
      "h1_threshold_trim": 0.10,
      "h2_max_horizon": 16,
      "h3_causality_lags": 6,
      "bootstrap_iterations": 2000
    }
  },
  "automation_settings": {
    "auto_retry_failed_jobs": true,
    "max_retries": 3,
    "retry_delay_minutes": 10,
    "auto_cleanup_on_success": true,
    "auto_compress_results": true,
    "generate_summary_reports": true,
    "email_notifications_on_completion": false,
    "webhook_notifications_on_failure": false
  },
  "scheduling_examples": {
    "daily_analysis": {
      "schedule": "daily",
      "time": "02:00",
      "enabled": false
    },
    "weekly_comprehensive": {
      "schedule": "weekly",
      "day": "monday",
      "time": "01:00",
      "enabled": false
    },
    "monthly_full_analysis": {
      "schedule": "monthly",
      "day": 1,
      "time": "00:00",
      "enabled": false
    }
  },
  "resource_monitoring": {
    "enable_system_monitoring": true,
    "monitoring_interval_seconds": 30,
    "cpu_alert_threshold": 90.0,
    "memory_alert_threshold": 85.0,
    "disk_alert_threshold": 90.0,
    "job_timeout_alert_minutes": 180,
    "failure_rate_alert_threshold": 0.2
  }
}